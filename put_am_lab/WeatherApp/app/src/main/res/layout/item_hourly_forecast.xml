<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/hourlyTemperatureTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="20Â°C"
            android:textSize="20sp"
            android:layout_below="@id/timeTextView"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/hourlyWeatherIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/hourlyTemperatureTextView"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:src="@drawable/ic_sunny_12" />

        <TextView
            android:id="@+id/hourlyWindSpeedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="10 km/h"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:layout_below="@id/hourlyWeatherIcon"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
